<div class="my-content">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 myform-cont">
                <div class="myform-top">
                    <div class="myform-top-left">
                        <h2>{{rest.restName}}-{{branch.nameBranch}}</h2>
                        <h3><strong>Agregando producto</strong></h3>	
                        <p>Ingrese los datos requeridos</p>		
					</div>
				</div>
                {{#if hasErrors}}
                    {{#each errors}}
                        <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                            {{this}}
                        </div>
                    {{/each}}
                {{/if}}
                <div class="myform-bottom"> 
                    <form role="form" action="/{{rest._id}}/edit/{{branch._id}}/prod/add" method="post" class="">
                        <div class="form-group">
                            <input type="text" name="nameproduc" placeholder="Nombre del Producto" class="form-control" id="nameproduc">
                        </div>
                        <div class="form-group">
                            <input type="text" name="precio" placeholder="Precio del Producto" class="form-control" id="precio">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Descripcion" placeholder="Descripcion" class="form-control" id="email">
                        </div>
                        <button type="submit" class="mybtn btn btn-success">Agregar</button>	
                    </form>
                </div>
            </div>					
		</div>
	</div>
</div>