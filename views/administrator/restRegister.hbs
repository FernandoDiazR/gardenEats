<div class="my-content">
		<div class="container">
			<div class="row">
				<div class="col-sm-6 col.sm-offset-3 myform-cont">
					{{#if hasErrors}}
						{{#each errors}}
							<div class="alert alert-danger alert-dismissable">
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
								{{ this }}
							</div>
						{{/each}}
					{{/if}}
					<div class="myform-top">	
						<div class="myform-top-left">
							<h3><strong>Nuevo Restaurante</strong></h3>
						    <p>Datos del Nuevo Restaurantes</p>
						</div>
					</div>
				</div>				
			</div>
			<div class="myform-bottom">
				<form role="form" action="/addRestaurant" method="post" class="">
					<div class="form-group">
						<input type="text" name="restName" placeholder="Nombre del Restaurante" class="form-control" id="NomSucursal">				
					</div>
					<div class="form-group">	
						<input type="text" name="restDescription" placeholder="Descripcion del Restaurante..." class="form-control" id="Descripcion">
					</div>					
					<button type="submit" class="mybtn btn btn-success">Aceptar</button>
				</form>
			</div>
		</div>
	</div>