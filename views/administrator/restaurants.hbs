<div class="my-content"> 
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1><strong>Restaurantes</strong></h1>
                {{#if hasErrors}}
                    {{#each error}}
                        <div class="alert alert-danger">
                            {{ this }}
                        </div>
                    {{/each}}
				{{/if}}
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-6">
                    <a href="/addRestaurant" class="btn btn-primary">Agregar restaurante</a>
                </div>
            </div>
            <br>
            {{#if noRest}}
            <h1>No hay restaurantes registrados en este momento.</h1>
            {{else}}
            {{#each rests}}
            <div class="row">
                <div class="col-md-10">			
                    <ul class="list-group">
                        <li class="list-group-item clearfix">
                            <div class="col-md-6">
                                {{ this.name }}
                            </div>
                            <div class="col-md-6">
                                <a href="#" class="col-md-4">Editar</a> <a class="col-md-4" href="#">Editar Horarios</a> <a class="col-md-4" href="#" > Eliminar</a>
                            </div>
                        </li>
                    </ul>									
                </div>		
            </div>		
            {{/each}}
            {{/if}}
       </div>	 								
    </div>
</div>