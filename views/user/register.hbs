<link rel="stylesheet" href="../css/custom.css">
<div class="my-content">
		<div class="container">
			<div class="row">
				<div class="col-sm-6 col-sm-offset-3 myform-cont">
					
					<div class="myform-top">
						<div class="myform-top-left">
							<h3><strong>Registrase en nuestro sitio</strong></h3>
							<!--<<label for="Nombre"  placeholder= "Nombre...">Registrate en nuestro sitio</label>-->
							<p>Por favor ingresa tus datos personales:</p>
							<div class="myform-top-right"><i class="fas fa-user"></i></div>
						</div>
					</div>
					{{#if hasError}}
						{{#each error}}
							<div class="alert alert-danger">
								{{this}}
							</div>
						{{/each}}
					{{/if}}	
					<div class="myform-bottom"> 
						<form role="form" action="/user/signup" method="post" class="">
							<div class="form-group">
								<input type="text" name="fullname" placeholder="Nombre Completo..." class="form-control" id="full-name">
							</div>
							<div class="form-group">
								<input type="text" name="username" placeholder="Username..." class="form-control" id="username">
							</div>
							<div class="form-group">
								<input type="text" name="email" placeholder="Correo..." class="form-control" id="email">
							</div>
							<div class="form-group">
								<input type="password" name="password" placeholder="Contraseña..." class="form-control" id="password">
							</div>
							<div class="form-group">
								<input type="password" name="confPassword" placeholder="Confirmar Contraseña" class="form-control" id="confpassword">
							</div>
							<select name="level" id="Tip-Usuarios" class="form-control">
								<option value="admin">Administrador</option>
								<option value="mod">Moderador</option>
								<option value="user">Usuario</option>
							</select>
							<button type="submit" class="mybtn">Registrarme</button>	
						</form>
					</div>
				</div>					
		</div>
	</div>

